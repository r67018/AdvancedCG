{
  "name": "OpenGL 3.0 Development Environment",
  "build": {
    "dockerfile": "./Dockerfile",
    "context": ".."
  },
  
  // コンテナの設定
  "runArgs": [
    "--cap-add=SYS_PTRACE",
    "--security-opt", "seccomp=unconfined"
  ],

  // ワークスペースのマウント
  "workspaceFolder": "/workspace",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind",

  // VSCode拡張機能
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools",
        "ms-vscode.cpptools-extension-pack",
        "ms-vscode.cmake-tools",
        "twxs.cmake",
        "jeff-hykin.better-cpp-syntax",
        "slevesque.shader",
        "raczzalan.webgl-glsl-editor"
      ],
      "settings": {
        "C_Cpp.default.cppStandard": "c++17",
        "C_Cpp.default.cStandard": "c11",
        "cmake.configureOnOpen": false,
        "files.associations": {
          "*.glsl": "glsl",
          "*.vert": "glsl",
          "*.frag": "glsl",
          "*.vs": "glsl",
          "*.fs": "glsl"
        }
      }
    }
  },

  // コンテナ起動後に実行するコマンド
  "postCreateCommand": "echo 'export DISPLAY=:99' >> ~/.bashrc && chmod +x /workspace/.devcontainer/*.sh && echo 'OpenGL Development Environment Ready!'",

  // コンテナ起動時に毎回実行するコマンド
  "postStartCommand": "bash -c 'setsid bash /workspace/.devcontainer/start-display.sh > /tmp/vnc-startup.log 2>&1 < /dev/null &' && sleep 8 && cat /tmp/vnc-startup.log",

  // ポートフォワーディング（必要に応じて）
  "forwardPorts": [5901, 6080],
  "portsAttributes": {
    "5901": {
      "label": "VNC Server",
      "onAutoForward": "notify"
    },
    "6080": {
      "label": "noVNC Web Client",
      "onAutoForward": "openPreview"
    }
  },

  // リモートユーザー
  "remoteUser": "root"
}
